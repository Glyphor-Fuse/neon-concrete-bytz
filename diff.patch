+  const [isVisible, setIsVisible] = useState(false);
+
+  useEffect(() => {
+    const hidden = localStorage.getItem('glyphor-badge-hidden');
+    if (!hidden) setIsVisible(true);
+  }, []);
+
+  const handleClose = () => {
+    setIsVisible(false);
